<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92c0e9"
    tools:context=".View.register">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/logoregesdit"
        android:src="@drawable/createuser"

        android:layout_marginTop="70dp"

        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="300dp"
        android:id="@+id/tv1"
        android:layout_centerInParent="true"
        android:text="Username"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:textColor="#f000"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoregesdit"/>
    <EditText
        android:layout_width="300dp"
        android:id="@+id/nameUser_dk"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:textColorHint="#f000"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bgroutextregedis"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv1"
        />
    <TextView
        android:layout_width="300dp"
        android:id="@+id/tv2"
        android:layout_centerInParent="true"
        android:text="Phone"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#f000"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUser_dk"
        />

    <EditText
        android:layout_width="300dp"
        android:id="@+id/phone_Userdk"
        android:layout_marginTop="2dp"
        android:paddingLeft="10dp"
        android:layout_height="40dp"
        android:textColorHint="#f000"
        android:layout_below="@+id/tv2"
        android:layout_centerInParent="true"
        android:background="@drawable/bgroutextregedis"/>
    <TextView
        android:layout_width="300dp"
        android:id="@+id/tv3"
        android:layout_centerInParent="true"
        android:text="Password"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#f000"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_Userdk"
        />

    <EditText
        android:layout_width="300dp"
        android:id="@+id/password_Userdk"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv3"
        android:background="@drawable/bgroutextregedis"
        android:layout_marginTop="2dp"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:textColorHint="#f000"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_below="@+id/password_Userdk"
        android:layout_centerInParent="true"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/animationbutonreiser"
            android:layout_marginTop="10dp"
            android:text="REGISTER"
            android:textStyle="bold"
            android:id="@+id/btnRegister"/>

    </LinearLayout>
    <TextView
        android:id="@+id/comebackLOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="LOGIN-->"
        android:textStyle="italic"
        android:textColor="#FC0101"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="15sp"/>



</RelativeLayout>